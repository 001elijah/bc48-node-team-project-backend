    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "token": {
                        "type": "string"
                    },
                    "user": {
                        "type": "object",
                        "properties": {
                            "userName": {
                                "type": "string",
                                "example": "John"
                            },
                            "email": {
                                "type": "string",
                                "example": "john@email.com"
                            },
                            "theme": {
                                "type": "string",
                                "example": "dark"
                            },
                            "avatarUrl": {
                                "type": "string",
                                "example": null
                            }
                        }
                    }
                }
            },
            "UserCurrent": {
                "type": "object",
                "properties": {
                    "userName": {
                        "type": "string",
                        "example": "John"
                    },
                    "email": {
                        "type": "string",
                        "example": "john@email.com"
                    },
                    "theme": {
                        "type": "string",
                        "example": "dark"
                    },
                    "avatarUrl": {
                        "type": "string",
                        "example": null
                    }
                }
            },
            "UserRegister": {
                "type": "object",
                "properties": {
                    "userName": {
                        "type": "string",
                        "example": "John"
                    },
                    "email": {
                        "type": "string",
                        "example": "john@email.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "example12345"
                    }
                }
            },
            "UserLogin": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "john@email.com"
                    },
                    "password": {
                        "type": "string",
                        "example": "example12345"
                    }
                }
            },
            "UserTheme": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string",
                        "example": "john@email.com"
                    },
                    "theme": {
                        "type": "string",
                        "example": "dark"
                    }
                }
            },
            "UserThemeReq": {
                "type": "object",
                "properties": {
                    "theme": {
                        "type": "string",
                        "example": "dark"
                    }
                }
            },
            "UserUpdate": {
                "type": "object",
                "properties": {
                    "userName": {
                        "type": "string",
                        "example": "Dude"
                    },
                    "email": {
                        "type": "string",
                        "example": "fakestemailever@fake.com"
                    },
                    "theme": {
                        "type": "string",
                        "example": "dark"
                    },
                    "avatarUrl": {
                        "type": "string",
                        "example": "https://res.cloudinary.com/dblzpxfzb/image/upload/v1687076583/uploads/t9ml2bpnat7offmhza7r.jpg"
                    }
                }
            },
            "UserUpdateReq": {
                "type": "object",
                "properties": {
                    "userName": {
                        "type": "string",
                        "example": "Dude"
                    },
                    "email": {
                        "type": "string",
                        "example": "fakestemailever@fake.com"
                    }
                }
            },
            "User400": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Password must be min 8 characters and does not contain white spaces"
                    }
                }
            },
            "User400theme": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Invalid theme value"
                    }
                }
            },
            "User401": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Email or password is wrong"
                    }
                }
            },
            "User404": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Not Found"
                    }
                }
            },
            "User409": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Email in use"
                    }
                }
            },
            "User500": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Server Error"
                    }
                }
            },
            "User401noAuth": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Not authorized"
                    }
                }
            }
